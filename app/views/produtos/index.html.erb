<% if flash[:notice] %>
    <div class="alert alert-success">
        <%= flash[:notice] %>
    </div>
<% end %>

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Descrição</th>
            <th>Preço</th>
            <th>Quantidade</th>            
        </tr>
    </thead>
    <tbody>
        <% @produtos_por_nome.each do |produto| %>
        <tr>
            <td><%= produto.nome %></%></td>
            <td><%= produto.descricao %></%></td>
            <td><%= produto.preco %></%></td>
            <td><%= produto.quantidade %></%></td>
            <td><%= button_to 'Deletar', produto, method: :delete,
                                        class: "btn btn-danger", data: { confirm: "Deletar #{produto.nome}?" } %>
            </td>
        </tr>
        <% end %>
    </tbody>
</table>
